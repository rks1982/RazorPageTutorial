@page

@model RazorPageTutorial.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["ShowButtons"] = true;
}
<style>
    .btn {
        width: 75px;
    }
</style>

<form method="post">
    <div class="input-group">
        <input class="form-control" asp-for="SearchTerm" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

@*@await Component.InvokeAsync("HeadCount")*@

<vc:head-count department-name="@null"></vc:head-count>
<h1>Employees</h1>


<div class="card-deck">
    @foreach (var employee in Model.Employees)
    {

        <partial name="_DisplayEmployeePartial" model="employee" view-data=" ViewData" />

    }
</div>

